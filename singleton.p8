__lua__
function _init()
	game = create_game()
	game2 = create_game_2()
end

function _update60()
	game.frames+=1
	game2.frames+=1
	if(btn(5)) then
		game=create_game()
		game2=create_game_2()
	end

end

function _draw()
	cls()
	print("press ❎ to init")
	print("singleton: ")
	print("serial: "..game.serial_num)
	print(game.frames)	
	
	print("-----------------")
	print("not singleton: ")
	print("serial: "..game2.serial_num)
	print(game2.frames)	
	
end
