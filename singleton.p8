--if a game had been created before, just reset the frame
function create_game()
	if game then 
		game.frames = 0
		return game
	end
	
	local g = {
		frames=0,
		serial_num=rnd(100)
	}
	return g
end

-- compare to non singleton
function create_game_2()
	local g = {
		frames=0,
		serial_num=rnd(100)
	}
	return g
end


